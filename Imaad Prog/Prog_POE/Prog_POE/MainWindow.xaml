<Window x:Class="Final_POE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Application" Height="450" Width="800">
    <Grid Background="Black">
        <!-- Main Grid with two columns -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <!-- Left column -->
            <ColumnDefinition Width="7*"/>
            <!-- Right column -->
        </Grid.ColumnDefinitions>

        <!-- Left Column: Menu Options -->
        <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button x:Name="btnEnterRecipe" Content="Enter A Recipe" Width="200" Height="40" Margin="10"/>
            <Button x:Name="btnViewRecipes" Content="View Existing Recipes" Width="200" Height="40" Margin="10"/>
        </StackPanel>

        <!-- Right Column: Title and Background -->
        <Grid Grid.Column="1" Background="#FF186DAE">
            <Label Content="Recipe Application" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" FontFamily="Rockwell"/>
        </Grid>
    </Grid>
</Window>
